datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       String  @id @default(cuid())
  phone    String  @unique
  password String
  image  String?
  name     String?
  posts    Post[]
}

model Post {
  id        String   @id @default(cuid())
  title     String
  content   String
  image  String?
  createdAt DateTime @default(now())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
}
